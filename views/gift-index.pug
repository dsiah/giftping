include common/header.pug
include common/navbar.pug

html
  +header()
  script.
    function remove(id) {
      fetch('/gift/' + id, {
        method: 'DELETE',
      })
      .then(res => res.text())
      .then(() => window.location.replace('/'))
    }
  body
    +navbar()
    h1 View Your Gifts üéÅ
    each gift in gifts
      div.gift-info
        h3 #{gift.title} for #{gift.recipient}
          button(onclick=`remove(${gift.gid})`) X
        pre= JSON.stringify(gift, null, 2)
